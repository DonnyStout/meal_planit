<LinearLayout
  android:id="@+id/plan_layout"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:padding="20dp">

  <Button
    android:id="@+id/generate_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/generate_button"/>

  <android.support.v7.widget.CardView
    android:id="@+id/breakfast_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">


      <ImageView
        android:id="@+id/breakfast_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        />

      <TextView
        android:id="@+id/breakfast_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/breakfast_photo"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        />

      <TextView
        android:id="@+id/breakfast_ready_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/breakfast_photo"
        android:layout_below="@+id/breakfast_title"
        android:textSize="15sp"
        />

    </RelativeLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/lunch_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">


      <ImageView
        android:id="@+id/lunch_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        />

      <TextView
        android:id="@+id/lunch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/lunch_photo"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        />

      <TextView
        android:id="@+id/lunch_ready_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/lunch_photo"
        android:layout_below="@+id/lunch_title"
        android:textSize="15sp"
        />

    </RelativeLayout>

  </android.support.v7.widget.CardView>


  <android.support.v7.widget.CardView
    android:id="@+id/dinner_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">


      <ImageView
        android:id="@+id/dinner_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        />

      <TextView
        android:id="@+id/dinner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dinner_photo"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        />

      <TextView
        android:id="@+id/dinner_ready_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dinner_photo"
        android:layout_below="@+id/dinner_title"
        android:textSize="15sp"
        />

    </RelativeLayout>

  </android.support.v7.widget.CardView>


</LinearLayout>
