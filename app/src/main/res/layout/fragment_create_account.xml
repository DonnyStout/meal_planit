<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/create_fragment_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="layout.CreateAccountFragment">

  <LinearLayout
    android:id="@+id/create_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/first_name_title"
      android:paddingStart="15dp"/>

    <EditText
      android:id="@+id/first_name_field"
      android:layout_width="100dp"
      android:layout_height="45dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/last_name_title"
      android:paddingStart="15dp"/>

    <EditText
      android:id="@+id/last_name_field"
      android:layout_width="100dp"
      android:layout_height="45dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/username_title"
      android:paddingStart="15dp"/>

    <EditText
      android:id="@+id/username_set_field"
      android:layout_width="100dp"
      android:layout_height="45dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/target_daily_calories_title"/>

    <Spinner
      android:id="@+id/calories_spinner"
      android:layout_width="100dp"
      android:layout_height="45dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/allergies_title"
      android:paddingStart="15dp"/>

    <Spinner
      android:id="@+id/allergy_box"
      android:layout_width="100dp"
      android:layout_height="45dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diet_title"/>

    <Spinner
      android:id="@+id/diet_box"
      android:layout_width="100dp"
      android:layout_height="45dp"/>

    <Button
      android:id="@+id/submit_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/submit_button"
      />


  </LinearLayout>

</ScrollView>
