<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/create_fragment_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="layout.CreateAccountFragment">

  <LinearLayout
    android:id="@+id/create_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="First Name"/>

    <EditText
      android:id="@+id/first_name_field"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Last Name"/>

    <EditText
      android:id="@+id/last_name_field"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Username"/>

    <EditText
      android:id="@+id/username_set_field"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Target daily calories"/>

    <Spinner
      android:id="@+id/calories_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Allergies"/>

    <Spinner
      android:id="@+id/allergy_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Diet"/>

    <Spinner
      android:id="@+id/diet_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <Button
      android:id="@+id/submit_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:text="Submit"
      />


  </LinearLayout>

</ScrollView>
